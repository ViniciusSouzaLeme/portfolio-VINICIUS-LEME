programa
{
	
	funcao inicio()
	{
		inteiro opcao, base1, altura1, base2, altura2, lado, area1, area2, area3

		escreva("Digite\n1 para calcular a área do quadrado\n2 para calcular a área do triangulo\n3 para calcular a área do retangulo\n:")
		leia(opcao)
		se(opcao==1)
		faca{
			escreva("Informe o lado: ")
			leia(lado)
			area1=lado*lado
			escreva("A área do quadrado é: ", area1)
			pare
			}enquanto (opcao==1)
				senao se(opcao==2)
				faca{
					escreva("Informe a base: ")
					leia(base1)
					escreva("Informe a altura: ")
					leia(altura1)
					area2=base1*altura1
					escreva("A área do triângulo é: ", area2)
					pare
					}enquanto(opcao==2)
						senao se(opcao==3)
						faca{
							escreva("Informe a base: ")
							leia(base2)
							escreva("Informe a altura: ")
							leia(altura2)
							area3=(base2*altura2)/2
							escreva("A área do retangulo é: ", area3)
							pare
						}enquanto(opcao==3)
						senao se(opcao==4)
							faca{
								escreva("Informe a diagonal maior: ")
								leia(diagonalmaior)
								escreva("Informe a diagonal menor: ")
								leia(diagonalmenor)
								area4=(diagonalmaior*diagonalmenor)/2
								escreva("A área do losângulo é: ", area4)
								pare
								}enquanto(opcao==4)
									senao se(opcao==5)
									faca{
										escreva("Informe a base maior: ")
										leia(basemaior)
										escreva("Informe a base menor: ")
										leia(basemenor)
										escreva("Informe a altura: ")
										leia(altura3)
										area5=((basemaior-basemenor)*altura3)/2
										escreva("A área do trapézio é: ", area5)
										pare
										}enquanto(opcao==5)
										senao se(opcao>5 ou opcao<1)
											{
												escreva("Número inválido")
											}
	}	
}
